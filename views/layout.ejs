<!DOCTYPE html>
<html lang="pt-br" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>WebLens</title>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!--<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">-->
    <script src="jquery/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.mark.min.js"></script>

    <style type="text/css">
      footer {
        position: fixed;
        bottom: 0;
        left: 0;
        padding-top: 10px;
        text-align: center;
        width: 100%;
        background-color: lightgray;
      }
      .jumbotron {
        background: none;
        margin-bottom: 0;
        padding-bottom: 0;
      }
      .form-group{
        margin-top: 0;
      }
      .btn-custom{
        width: 500px !important;
      }
      .table-custom{
          white-space: nowrap;
          width: 1%;
          margin: 0px auto;
      }
      .p-custom{
        font-size: 18px;
      }
      button[aria-expanded=true] .glyphicon-arrow-down {
        display: none;
      }
      button[aria-expanded=false] .glyphicon-arrow-up {
        display: none;
      }
      mark {
        padding: 0;
        background-color: inherit;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-default role="navigation"">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/" title="WebLens - Notícias acessíveis para pessoas cegas!">
            <span class="glyphicon glyphicon glyphicon-search"></span>
              WebLens
            </a>
          </div>
          <div class="navbar-right">
            <ul class="nav navbar-nav">
              <li><form class="navbar-form" action="index.html" method="post">
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Insira palavra para marcar!" name="busca">
                  <div class="input-group-btn">
                    <button class="btn btn-default" type="submit" name="button">
                      <i class="glyphicon glyphicon-search"></i>
                    </button>
                  </div>
                </div>
              </form></li>
              <li><a href="/dictionary">Dicionário</a></li>
              <li class=""></li>
              <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Marcações
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li><a id="risca">Riscar</a></li>
                  <li><a id="cor">Esmaecer</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <%- body %>
      </div>
    </main>
    <footer>
      <p class="text-muted">ICOMP - Engenharia de Software - TESI</p>
    </footer>
  </body>

  <script>
    $(document).ready(function(){
      $("#risca").click(function(){
        if($("mark").css('text-decoration').indexOf('none') > -1){
          $("mark").css({"text-decoration": "line-through"});
        }else{
          $("mark").css({"text-decoration": "none"});
        }
      });

      $("#cor").click(function(){
        var color = $("mark").css('color');
        if(color == 'rgb(0, 0, 0)'){
          $("mark").css({"color": "lightgray"});
        }else{
          $("mark").css({"color": "rgb(0, 0, 0)"});
        }
      });
    });
  </script>


</html>
